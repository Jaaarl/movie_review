<%= form_with(model: [@movie, @review], local: true) do |form| %>
  <h1>Add Review for <%= @movie.title %></h1>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, rows: 5 %>
  </div>

  <div>
    <%= form.label :rating %>
    <%= form.select :rating, options_for_select((1..5).to_a) %>
  </div>

  <div>
    <%= form.submit 'Submit Review', class: 'btn btn-success'%>
  </div>
<% end %>

<%= link_to 'Back to Movie', movie_path(@movie), class: 'btn btn-primary' %>