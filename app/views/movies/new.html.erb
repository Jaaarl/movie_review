<h1>New Movie</h1>
<div class="container">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: @movie, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :blurb, class: "form-label" %>
          <%= form.text_area :blurb, class: "form-control", rows: 3 %>
        </div>

        <div class="mb-3">
          <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
            <div class="custom-checkbox">
              <%= b.check_box(class: "custom-control-input") %>
              <%= b.label(class: "custom-control-label") %>
            </div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= form.label :released, class: "form-label" %>
          <%= form.date_select :released, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :country_of_origin, class: "form-label" %>
          <%= form.text_field :country_of_origin, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :showing_start, class: "form-label" %>
          <%= form.datetime_select :showing_start, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :showing_end, class: "form-label" %>
          <%= form.datetime_select :showing_end, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
